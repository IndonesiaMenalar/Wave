{{!< default}}

<div class="content-area">
    <main class="site-main kg-width-normal">
        {{#post}}
            <article class="{{post_class}} single">
                <div
                    class="single-media{{#if og_description}} hidden-md hidden-lg hidden-xl{{/if}}">
                    {{> post-media ratio="square"}}
                </div>
                {{#if og_description}}
                    {{> player}}
                {{else}}
                    {{> post-header single=true}}
                {{/if}}
                <div class="post-content u-text-format">
                    {{content}}
                </div>
                {{> share}}
                <div class="author-list">
                    <h3 class="author-list-title">
                        {{#if og_description}}
                            Hosted by:
                        {{else}}
                            Written by:
                        {{/if}}
                    </h3>
                    {{#foreach authors}}
                        {{> author}}
                    {{/foreach}}
                </div>
            </article>
        {{/post}}
    </main>
</div>