{{#if @labs.members}}
  {{#unless @member}}
    <div class="subscribe">
      <div class="container">
        <div class="subscribe-wrapper">
          {{#unless login}}
            <h3 class="subscribe-title">{{t "Subscribe to {site}" site=@site.title}}</h3>
            <h4 class="subscribe-subtitle">{{t "Stay up to date! Get all the latest & greatest posts delivered straight to your inbox."}}</h4>
          {{else}}
            <h3 class="subscribe-title">{{t "Welcome back!"}}</h3>
            <h4 class="subscribe-subtitle">{{t "Sign in to your account again for full access."}}</h4>
          {{/unless}}
          <form class="subscribe-form" data-members-form="subscribe">
            <div class="form-wrapper">
              <input class="subscribe-email" type="email" data-members-email placeholder="{{t "Your email address"}}" required="true" autocomplete="false">
              <button class="form-button" type="submit">
                {{> loader}}
              </button>
            </div>
            <div class="notification notification-success">
              {{t "Great! Check your inbox and click the link to complete signin."}}
              <button class="button-icon notification-close"><i class="icon icon-window-close"></i></button>
            </div>
            <div class="notification notification-error">
              {{t "Please enter a valid email address!"}}
              <button class="button-icon notification-close"><i class="icon icon-window-close"></i></button>
            </div>
          </form>
          {{#unless login}}
            <a class="subscribe-message" href="{{@site.url}}/signin/">
              {{t "Already have an account?"}}
              <span class="subscribe-message-link">{{t "Sign in"}}</span>
            </a>
          {{else}}
            <a class="subscribe-message" href="{{@site.url}}/signup/">
              {{t "Don't have an account yet?"}}
              <span class="subscribe-message-link">{{t "Sign up"}}</span>
            </a>
          {{/unless}}
        </div>
      </div>
    </div>
  {{/unless}}
{{/if}}